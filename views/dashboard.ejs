  <!-- ======= Mobile nav toggle button ======= -->


  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>DashBoard</h2>
          <ol class="float-right">
            <span class="text-info h4 px-3"> <%= name %></span>
            <a href="users/logout" class="btn btn-outline-danger">Logout</a>
            <button class="btn btn-outline-primary btn-block p-1 m-1" data-toggle="modal"
              data-target="#contactModal">UPLOAD</button>





          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->










    <div class="container ">
      <h1 class="text-center">MESSAGES</h1>
      <div class="row">
        <% if(user){ %>
   <% var c = 0;%>
          
          <% for(var i = user.length - 1 ; i >= 0 ; i--) { %>

        <!-- <div class="row"> -->
        <div class="col-md-4 bg-light p-3 border" data-toggle="modal"
        data-target="#MESSAGESModal<%=c%>">
          <p class="text-info my-3"><%= user[i].name %></p>
          
        </div>
        <!-- </div> -->
        <% c++; %>
        <%} %>

        <%} %>



        
      </div>
    </div>



  </main><!-- End #main -->








  <!-- ======= Footer ======= -->








  <!-- MODALS -->
  <div class="modal fade text-dark mb-4" id="contactModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="contactModalTitle">UPLOAD</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!-- UPLOADER -->
          <div class="container text-center border mb-md-3">
            <form action="/users/dashboard" method="POST">
              <h6 class="p-3">DO YOU WANT TO UPLOAD OR POST...?!</h6>


              <!-- <div class="form-group image-preview mx-auto text-center" id="imagePreview">
                <img src="" alt="Image Preview" id="img-preview" class="image-preview__image">
                <span class="form-group image-preview__default-text">Image Preview</span>

              </div>
              <input class="form-control inpFile" type="file" name="inpFile" id="file-upload"> -->

              <div class="card1">
                <div class="col-md-6 text-center">

                  <img src="" id="img-preview" style="width: 100%;" />

                </div>
                <label class="file-upload-container" for="file-upload">
                  <!-- <input id="file-upload" type="file" style="display:none;"> -->
              <input class="form-control inpFile" type="file" name="inpFile" id="file-upload" style="display:none;" >
                  
                  Select an Image
                </label>
              </div>
              <textarea class="form-control" name="writeups" id="" cols="30" rows="10"></textarea>
              <div class=" form-group">
                <select class="form-control" name="filter" id="filter">
                  <option>filter-male</option>
                  <option>filter-female</option>
                  <option>filter-landscape</option>
                  <option>filter-others</option>



                </select>
              </div>
              <div class=" form-group">
                <input class="form-control" type="text" name="title" id="title" placeholder="Please write Image Title Here">
              </div>
              <input class="form-control my-4 btn btn-outline-success" type="submit" value="SAVE">

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <% if(user){ %>
   <% var c = 0;%>
    <% for(var i = user.length - 1 ; i >= 0 ; i--) { %>
      
  
  <div class="modal fade text-dark" id="MESSAGESModal<%=c%>">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="MESSAGESModalTitle">MESSAGE</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!-- UPLOADER -->
          
          <div class="container text-center border mb-md-3">
  
          <h3 class="text-info my-3"><%= user[i].name %></h3>
  
            <p class="bg-info h5 text-white p-3 m-0"> Request </p>
          <p class="text-white bg-dark  mb-4 p-2 m-0"> <%= user[i].subject %></p>
  
  
          <p class="bg-info h5 text-white p-3 m-0"> Contact </p>
          <p class="text-white bg-dark  mb-4 p-2 m-0"> <%= user[i].email %></p>
  
          <p class="bg-info h5 text-white p-3 m-0">Message </p>
          <p class="text-white bg-dark mb-4 p-2 m-0"> <%= user[i].message %></p>
        </div>
      </div>
    </div>
  </div>
  </div>
  <% c++; %>
  <% } %>
  <% } %>


  <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>



  <script src="../public/assets/js/preview.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <script src="../public/assets/scripts/app.js"></script>




